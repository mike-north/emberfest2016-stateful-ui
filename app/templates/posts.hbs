<div class="posts-index">
  <div class="posts-left">
    <div class="posts-left-search">
      {{input
        class='posts-search-field'
        type='search'
        placeholder='ðŸ”Ž Search'}}
    </div>
    <div class="posts-left-content">
    {{#each model as |post|}}
      {{#link-to "posts.show" post.id classNames='post-tile'}}
          <div class="author-image">
            <img src={{post.authorPhotoUrl}} alt="">
          </div>
          <div class="post-tile-content">
            <h3>{{post.title}}</h3>
            <span class="author-name">
              {{post.authorName}}
            </span>
            <span class="created-at pull-right">
              {{moment-format post.createdAt "LL"}}
            </span>
            <div class="post-tease">
              {{tease post.body chars=80}}...
            </div>
          </div>
          
      {{/link-to}}
    {{/each}}
    </div>
  </div>
  <div class="posts-right">
    {{outlet}}
  </div>
</div>
