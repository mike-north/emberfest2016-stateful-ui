<div class="post-view">
  <div class="title-row">
    <img src={{model.authorPhotoUrl}} alt={{authorName}} class="author-portrait">
    <h1>{{model.title}}</h1>
    <div class="actions">
        <button>Reply</button>
    </div>
    <div class="metadata-row">
    By <span class="author-name">{{model.authorName}}</span> at <span class="created-at date-field">{{moment-format model.createdAt "LLL"}}</span>  
  </div>
  </div>
  

  {{#if model.featuredImageUrl}}
  <div class="feature-image-row">
    <img src={{model.featuredImageUrl}} alt="" class="feature-image">
  </div>
  {{/if}}

  <p class="body">
    {{markdown-to-html model.body}}
  </p>
</div>